<br>
<h2> Search Results </h2>
<br>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped table-bordered">
            <thead>
                <th>Title </th>
                <th>Author </th>
                <th>Add to Library </th>
                <th>Read Book </th>
            </thead>
            <tbody>
                <%@books.each do |book|%>
                <tr>
                    <td><%=book["volumeInfo"]["title"]%></td>
                    <td><%=book["volumeInfo"]["authors"].to_a[0]%></td>
                    <td><%=link_to book["volumeInfo"]["title"], new_book_path(book)%></td>
                    <td><%=link_to "Go to Google Books", book["volumeInfo"]["previewLink"], target: :_blank %></td>
                </tr>
                <%end%>
            </tbody>
            </table>
        </div>
    </div>
</div>