<%= form_for @comment do |f| %>
<div class="jumbotron">
  <div class="field">
    <%= f.label :content %> <br />
    <%= f.text_area :content, cols: 25, rows: 10%>
  </div>

  <div class="field">
    <%= f.label :user %> <br />
    <%= f.text_field :user_id, {readonly: true}%>
  </div>

  <div class="field">
    <%= f.label :book %> <br />
    <%= f.text_field :book_id, {readonly: true}%>
  </div>

  <div class="actions">
    <%= f.submit%>
  </div>
</div>
<% end %>