<%= form_for @comment do |f| %>

<% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="jumbotron">
  <div class="field">
    <%= f.label :content %> <br />
    <%= f.text_area :content, cols: 25, rows: 10%>
  </div>

  <div class="field">
    <%= f.label :user %> <br />
    <%= f.text_field :user_id, {readonly: true}%>
  </div>

  <div class="field">
    <%= f.label :book %> <br />
    <%= f.text_field :book_id, {readonly: true}%>
  </div>

  <div class="actions">
    <%= f.submit%>
  </div>
</div>
<% end %>