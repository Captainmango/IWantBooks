<br>
<h1><%=@book.title%></h1>
<br>
<h2><%=@book.author%></h2>
<%=link_to "Read Book", @book.preview_link, target: :_blank%>
<br>
<br>
<%if current_user.admin%>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped table-bordered">
            <thead>
                <th>Email</th>
                <th>Comment </th>
                <th>Time </th>
                <th>Admin </th>
            </thead>
            <tbody>
                <% @book.comments.each do |c| %>
                <tr>
                    <td><%=c.user.email%></td>
                    <td><%=c.content%></td>
                    <td><%=c.created_at %></td>
                    <td><%=link_to "Delete", comment_path(c), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }%> / 
                    <%= link_to "Edit", edit_comment_path(c) %></td>
                </tr>
                <%end%>
            </tbody>
            </table>
        </div>
    </div>
</div>
<%else%>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped table-bordered">
            <thead>
                <th>Email</th>
                <th>Comment </th>
                <th>Time </th>
                <th>Admin </th>
            </thead>
            <tbody>
                <% @book.comments.each do |c| %>
                <tr>
                    <td><%=c.user.email%></td>
                    <td><%=c.content%></td>
                    <td><%=c.created_at %></td>
                    <%if current_user.id = c.user_id%>
                    <td><%=link_to "Delete", comment_path(c), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }%> / 
                    <%= link_to "Edit", edit_comment_path(c) %></td>
                    <%end%>
                </tr>
                <%end%>
            </tbody>
            </table>
        </div>
    </div>
</div>
<%end%>

    
    