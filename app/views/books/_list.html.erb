<br>
<h2> My Library </h2>
<br>
<%if current_user.admin %>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped table-bordered">
            <thead>
                <th>Title </th>
                <th>Author </th>
                <th>Read Book </th>
                <th>Admin </th>
            </thead>
            <tbody>
                <%user_books.each do |book|%>
                <tr>
                    <td><%= link_to book.title, book_path(book)%></td>
                    <td><%=book.author%></td>
                    <td><%=link_to "Go to Google Books", book.preview_link, target: :_blank %></td>
                    <td><%=link_to "Delete", book_path(book), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }%> / 
                    <%= link_to "Edit", edit_book_path(book)%></td>
                </tr>
                <%end%>
            </tbody>
            </table>
        </div>
    </div>
</div>

<%else%>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped table-bordered">
            <thead>
                <th>Title </th>
                <th>Author </th>
                <th>Read Book </th>
            </thead>
            <tbody>
                <%user_books.each do |book|%>
                <tr>
                    <td><%= link_to book.title, book_path(book)%></td>
                    <td><%=book.author%></td>
                    <td><%=link_to "Go to Google Books", book.preview_link, target: :_blank %></td>
                </tr>
                <%end%>
            </tbody>
            </table>
        </div>
    </div>
</div>

<%end%>

